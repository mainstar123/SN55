# Network Configuration
# Options: localnet, testnet, finney
NETWORK=finney

# Wallet Configuration
# Your coldkey name (created with btcli wallet create)
COLDKEY=precog_coldkey

# Your hotkey name for mining (created with btcli wallet new_hotkey)
MINER_HOTKEY=miner_hotkey

# Subnet Configuration
# Precog subnet is netuid 55
NETUID=55

# Mining Configuration
# Number of blocks to blacklist validator for poor performance
BLACKLIST_TIME=3600

# Maximum number of concurrent requests
MAX_CONCURRENT_REQUESTS=16

# Minimum stake required for requests
MIN_STAKE_THRESHOLD=100

# Performance Configuration
# Maximum allowed response time (seconds)
MAX_RESPONSE_TIME=10.0

# Priority mechanism for high-value requests
PRIORITY_ENABLED=true

# Validator permit requirements
REQUIRE_VPERMIT=true

# Logging Configuration
LOGGING_LEVEL=info
LOGGING_DIR=./logs

# Optional: Custom endpoints (uncomment if needed)
# SUBSTRATE_ENDPOINT=wss://archive.substrate.network:443
# SUBSTRATE_CHAIN_ENDPOINT=wss://entrypoint-finney.opentensor.ai:443

# Optional: Performance tuning
# GPU_DEVICE=0
# BATCH_SIZE=8
# LEARNING_RATE=0.001

# Optional: Advanced features
# COMPETITION_INTELLIGENCE=true
# ADAPTIVE_INTERVALS=true
# MARKET_REGIME_DETECTION=true
